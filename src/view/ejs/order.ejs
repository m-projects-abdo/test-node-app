<%- include('./includes/head.ejs') %>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('./includes/navigation.ejs') %> 
  <%- include('./util/errors-message.ejs', {errors}) %> 
  <h1>My orders: </h1>
  <main class="cart">
    <div class="grid">
      <% if (productOrdered.length > 0) { %>
        <% for(let item of productOrdered) { %>
          <article class="card product-item">
            <header class="card__header">
              <p class="product__title">
                <%= item.title %>
              </p>
            </header>
            <!-- <div class="card__image"> -->
              <!-- <img 
                width="200"
                height="200"
                src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" 
                alt="A Book"
              > -->
            <!-- </div> -->
            <div class="card__content">
              <p class="product__price">
                <span>Price:</span> <%= item.price %>$
              </p>
              <p class="product__title">
                <span>Quantity:</span> <%= item.orderItem.quantity %>
              </p>
              <p class="product__title">
                <span>Owner name:</span>
                <a href="/profile/<%= item.userId %>">
                  <%= item.user.name %>
                </a>
              </p>
              <p class="product__description">
                <span>Description:</span> <%= item.description %>..
              </p>
            </div>
            <div class="card__actions">
              <a href="/product/<%= item.id %>" class="btn">
                Details
              </a>
            </div>
          </article>
        <% } %>
      <% } else { %>
        <p>No products ordered yet..</p>
      <% } %>
    </div>

    <a href="/" class="home_button">
      Back to home..
    </a>
  </main>
<%- include('./includes/end.ejs') %> 