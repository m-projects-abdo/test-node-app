<header class="main-header">
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <% if (isLoggedIn) { %>
        <li class="main-header__item">
          <a 
            class="<%= pagePath == '/profile' ? 'active' : '' %>" 
            href="/profile"
          ><%= username %></a>
        </li>
      <% } %>
      <li class="main-header__item">
        <a 
          class="<%= pagePath == '/' ? 'active' : '' %>" 
          href="/"
        >Shop</a>
      </li>
      <% if (isLoggedIn) { %>
        <li class="main-header__item">
          <a 
            class="<%= pagePath == '/admin/add-product' ? 'active' : '' %>" 
            href="/admin/add-product"
          >Add Product</a>
        </li>
        <li class="main-header__item">
          <a 
            class="<%= pagePath == '/admin/cart' ? 'active' : '' %>" 
            href="/admin/cart"
          >Cart</a>
        </li>
        <li class="main-header__item">
          <form action="/auth/logout" method="POST">
            <button type="submit" class="user_button">
              Logout
            </button>
          </form>
        </li>
      <% } else { %>
        <li class="main-header__item">
          <a 
            class="<%= pagePath == '/auth/register' ? 'active' : '' %>" 
            href="/auth/register"
          >Register</a>
        </li>
        <li class="main-header__item">
          <a 
            class="<%= pagePath == '/auth/login' ? 'active' : '' %>" 
            href="/auth/login"
          >Login</a>
        </li>
      <% } %>
    </ul>
  </nav>
</header>